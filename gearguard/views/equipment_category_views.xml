<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================================ -->
    <!-- EQUIPMENT CATEGORY VIEWS -->
    <!-- ============================================================ -->

    <!-- Tree View -->
    <record id="equipment_category_view_tree" model="ir.ui.view">
        <field name="name">equipment.category.tree</field>
        <field name="model">equipment.category</field>
        <field name="arch" type="xml">
            <tree string="Equipment Categories">
                <field name="name"/>
                <field name="code"/>
                <field name="equipment_count"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="equipment_category_view_form" model="ir.ui.view">
        <field name="name">equipment.category.form</field>
        <field name="model">equipment.category</field>
        <field name="arch" type="xml">
            <form string="Equipment Category">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_equipment" type="object"
                                class="oe_stat_button" icon="fa-cogs">
                            <field name="equipment_count" widget="statinfo" string="Equipment"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="color" widget="color_picker"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="note" placeholder="Additional notes about this category..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="equipment_category_view_kanban" model="ir.ui.view">
        <field name="name">equipment.category.kanban</field>
        <field name="model">equipment.category</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="color"/>
                <field name="equipment_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click"
                             t-attf-style="border-left: 4px solid #{kanban_color(record.color.raw_value)};">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_title">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <span><field name="equipment_count"/> Equipment</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="equipment_category_view_search" model="ir.ui.view">
        <field name="name">equipment.category.search</field>
        <field name="model">equipment.category</field>
        <field name="arch" type="xml">
            <search string="Search Categories">
                <field name="name"/>
                <field name="code"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_equipment_category" model="ir.actions.act_window">
        <field name="name">Equipment Categories</field>
        <field name="res_model">equipment.category</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first equipment category
            </p>
            <p>
                Categories help organize equipment types (e.g., Machinery, Vehicles, IT Equipment)
            </p>
        </field>
    </record>

</odoo>
