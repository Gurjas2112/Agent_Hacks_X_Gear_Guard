<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================================ -->
    <!-- WORK CENTER VIEWS (FROM MOCKUP) -->
    <!-- ============================================================ -->

    <!-- Tree View - Shows all work centers with costs -->
    <record id="work_center_view_tree" model="ir.ui.view">
        <field name="name">maintenance.work.center.tree</field>
        <field name="model">maintenance.work.center</field>
        <field name="arch" type="xml">
            <tree string="Work Centers">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="alternate_workcenter_ids" widget="many2many_tags"/>
                <field name="hourly_cost" sum="Total Hourly"/>
                <field name="capacity_cost" sum="Total Capacity"/>
                <field name="total_cost" sum="Grand Total"/>
                <field name="capacity"/>
                <field name="utilization_rate" widget="progressbar"/>
                <field name="maintenance_team_id"/>
                <field name="equipment_count"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="work_center_view_form" model="ir.ui.view">
        <field name="name">maintenance.work.center.form</field>
        <field name="model">maintenance.work.center</field>
        <field name="arch" type="xml">
            <form string="Work Center">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_equipment" type="object"
                                class="oe_stat_button" icon="fa-cog">
                            <field name="equipment_count" widget="statinfo" string="Equipment"/>
                        </button>
                        <button name="action_view_requests" type="object"
                                class="oe_stat_button" icon="fa-wrench">
                            <field name="request_count" widget="statinfo" string="Requests"/>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            invisible="active"/>
                    
                    <div class="oe_title">
                        <label for="name" string="Work Center"/>
                        <h1>
                            <field name="name" placeholder="e.g., Machine Shop"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Basic Information">
                            <field name="code"/>
                            <field name="location"/>
                            <field name="maintenance_team_id"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group string="Capacity">
                            <field name="capacity"/>
                            <field name="resource_calendar_id"/>
                            <field name="utilization_rate" widget="progressbar"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Cost Information">
                            <field name="currency_id" invisible="1"/>
                            <field name="hourly_cost" widget="monetary"/>
                            <field name="capacity_cost" widget="monetary"/>
                            <field name="total_cost" widget="monetary"/>
                        </group>
                        <group string="Alternate Centers">
                            <field name="alternate_workcenter_ids" widget="many2many_tags"
                                   options="{'color_field': 'color'}"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Notes">
                            <field name="note" placeholder="Internal notes about this work center..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="work_center_view_kanban" model="ir.ui.view">
        <field name="name">maintenance.work.center.kanban</field>
        <field name="model">maintenance.work.center</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="name"/>
                <field name="code"/>
                <field name="total_cost"/>
                <field name="utilization_rate"/>
                <field name="maintenance_team_id"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <span class="badge text-bg-secondary me-1"><field name="code"/></span>
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div><i class="fa fa-money me-1"/>Cost: <field name="total_cost" widget="monetary"/>/hr</div>
                                    <div><i class="fa fa-users me-1"/><field name="maintenance_team_id"/></div>
                                    <div class="mt-1">
                                        <span class="text-muted small">Utilization:</span>
                                        <field name="utilization_rate" widget="progressbar"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="work_center_view_search" model="ir.ui.view">
        <field name="name">maintenance.work.center.search</field>
        <field name="model">maintenance.work.center</field>
        <field name="arch" type="xml">
            <search string="Search Work Centers">
                <field name="name"/>
                <field name="code"/>
                <field name="maintenance_team_id"/>
                
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Team" name="group_team" context="{'group_by': 'maintenance_team_id'}"/>
                    <filter string="Location" name="group_location" context="{'group_by': 'location'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Pivot View for Cost Analysis -->
    <record id="work_center_view_pivot" model="ir.ui.view">
        <field name="name">maintenance.work.center.pivot</field>
        <field name="model">maintenance.work.center</field>
        <field name="arch" type="xml">
            <pivot string="Work Center Costs" sample="1">
                <field name="maintenance_team_id" type="row"/>
                <field name="hourly_cost" type="measure"/>
                <field name="capacity_cost" type="measure"/>
                <field name="total_cost" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Action -->
    <record id="action_work_center" model="ir.actions.act_window">
        <field name="name">Work Centers</field>
        <field name="res_model">maintenance.work.center</field>
        <field name="view_mode">tree,kanban,form,pivot</field>
        <field name="search_view_id" ref="work_center_view_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first work center
            </p>
            <p>
                Track maintenance work locations with hourly costs and capacity.
            </p>
        </field>
    </record>

</odoo>
