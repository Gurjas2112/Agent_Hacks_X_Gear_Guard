    <menuitem id="menu_work_centers"
              name="Work Centers"
              parent="menu_gearguard_root"
              action="action_work_center"
              sequence="25"/>

    <!-- ==================== TEAMS ==================== -->
    <menuitem id="menu_teams"
              name="Teams"
              parent="menu_gearguard_root"
              action="action_maintenance_team"
              sequence="30"/>

    <!-- ==================== REPORTS ==================== -->
    <menuitem id="menu_reports"
              name="Reporting"
              parent="menu_gearguard_root"
              sequence="40"/>
    
    <menuitem id="menu_maintenance_reports"
              name="Maintenance Analysis"
              parent="menu_reports"
              action="action_maintenance_request_report"
              sequence="10"/>

    <!-- ==================== CONFIGURATION ==================== -->
    <menuitem id="menu_configuration"
              name="Configuration"
              parent="menu_gearguard_root"
              sequence="100"
              groups="base.group_system"/>
    
    <menuitem id="menu_config_categories"
              name="Equipment Categories"
              parent="menu_configuration"
              action="action_equipment_category"
              sequence="10"/>
    
    <menuitem id="menu_config_teams"
              name="Maintenance Teams"
              parent="menu_configuration"
              action="action_maintenance_team"
              sequence="20"/>

