              name="By Employee"
              parent="menu_equipment"
              action="action_equipment_by_employee"
              sequence="30"/>
    
    <menuitem id="menu_equipment_categories"
              name="Categories"
              parent="menu_equipment"
              action="action_equipment_category"
              sequence="40"/>

