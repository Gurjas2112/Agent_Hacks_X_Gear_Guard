    <menuitem id="menu_equipment"
              name="Equipment"
              parent="menu_gearguard_root"
              sequence="20"/>
    
    <menuitem id="menu_equipment_all"
              name="All Equipment"
              parent="menu_equipment"
              action="action_equipment"
              sequence="10"/>
    
    <menuitem id="menu_equipment_by_department"
              name="By Department"
              parent="menu_equipment"
              action="action_equipment_by_department"
              sequence="20"/>
    
