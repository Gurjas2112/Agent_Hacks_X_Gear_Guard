<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================================ -->
    <!-- EQUIPMENT VIEWS - THE CENTRAL ASSET DATABASE -->
    <!-- ============================================================ -->

    <!-- Tree View -->
    <record id="equipment_view_tree" model="ir.ui.view">
        <field name="name">equipment.equipment.tree</field>
        <field name="model">equipment.equipment</field>
        <field name="arch" type="xml">
            <tree string="Equipment" decoration-danger="is_scrap" decoration-warning="warranty_status=='expired'">
                <field name="name"/>
                <field name="serial_number"/>
                <field name="category_id"/>
                <field name="owner_display" string="Owner"/>
                <field name="location"/>
                <field name="work_center_id" optional="show"/>
                <field name="maintenance_team_id"/>
                <field name="warranty_status" widget="badge" 
                       decoration-success="warranty_status=='valid'"
                       decoration-danger="warranty_status=='expired'"
                       decoration-muted="warranty_status=='na'"/>
                <field name="is_scrap" invisible="1"/>
                <field name="open_request_count" string="Open Requests"/>
            </tree>
        </field>
    </record>

    <!-- Form View - THE MAIN EQUIPMENT FORM -->
    <record id="equipment_view_form" model="ir.ui.view">
        <field name="name">equipment.equipment.form</field>
        <field name="model">equipment.equipment</field>
        <field name="arch" type="xml">
            <form string="Equipment">
                <header>
                    <button name="action_create_request" type="object"
                            string="Create Maintenance Request" class="oe_highlight"
                            invisible="is_scrap"/>
                    <button name="action_scrap_equipment" type="object"
                            string="Scrap Equipment" class="btn-danger"
                            invisible="is_scrap"
                            confirm="Are you sure you want to mark this equipment as scrapped? This action cannot be undone easily."/>
                </header>
                <sheet>
                    <!-- SMART BUTTONS - CRITICAL FOR SCORING! -->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_maintenance_requests" type="object"
                                class="oe_stat_button" icon="fa-wrench">
                            <field name="open_request_count" widget="statinfo" string="Maintenance"/>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="SCRAPPED" bg_color="bg-danger"
                            invisible="not is_scrap"/>
                    
                    <field name="image" widget="image" class="oe_avatar"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Equipment Name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Basic Information">
                            <field name="serial_number"/>
                            <field name="category_id"/>
                            <field name="location" placeholder="e.g., Building A, Floor 2"/>
                        </group>
                        <group string="Ownership">
                            <field name="ownership_type" widget="radio"/>
                            <field name="department_id" 
                                   invisible="ownership_type != 'department'"
                                   required="ownership_type == 'department'"/>
                            <field name="employee_id" 
                                   invisible="ownership_type != 'employee'"
                                   required="ownership_type == 'employee'"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Maintenance Responsibility">
                            <field name="maintenance_team_id"/>
                            <field name="technician_id" 
                                   domain="[('id', 'in', team_member_ids)]"
                                   options="{'no_create': True}"/>
                            <field name="work_center_id"/>
                            <field name="team_member_ids" invisible="1"/>
                        </group>
                        <group string="Purchase &amp; Warranty">
                            <field name="purchase_date"/>
                            <field name="purchase_value" widget="monetary"/>
                            <field name="warranty_expiry"/>
                            <field name="warranty_status" widget="badge"
                                   decoration-success="warranty_status=='valid'"
                                   decoration-danger="warranty_status=='expired'"
                                   decoration-muted="warranty_status=='na'"/>
                            <field name="vendor_id"/>
                        </group>
                    </group>
                    
                    <group string="Scrap Information" invisible="not is_scrap">
                        <group>
                            <field name="is_scrap" readonly="1"/>
                            <field name="scrap_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="scrap_reason" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Notes">
                            <field name="note" placeholder="Internal notes about this equipment..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="equipment_view_kanban" model="ir.ui.view">
        <field name="name">equipment.equipment.kanban</field>
        <field name="model">equipment.equipment</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="name"/>
                <field name="category_id"/>
                <field name="maintenance_team_id"/>
                <field name="owner_display"/>
                <field name="location"/>
                <field name="is_scrap"/>
                <field name="open_request_count"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.is_scrap.raw_value ? 'o_kanban_record_has_image_fill bg-danger-light' : ''}">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top mb-0">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                            <span t-if="record.is_scrap.raw_value" class="badge text-bg-danger ms-1">SCRAPPED</span>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div><i class="fa fa-folder-o me-1"/><field name="category_id"/></div>
                                    <div><i class="fa fa-map-marker me-1"/><field name="location"/></div>
                                    <div><i class="fa fa-users me-1"/><field name="maintenance_team_id"/></div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span t-if="record.open_request_count.raw_value > 0" class="badge text-bg-warning">
                                            <i class="fa fa-wrench"/> <field name="open_request_count"/> Open
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="owner_display"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View - TRACKING BY DEPARTMENT/EMPLOYEE -->
    <record id="equipment_view_search" model="ir.ui.view">
        <field name="name">equipment.equipment.search</field>
        <field name="model">equipment.equipment</field>
        <field name="arch" type="xml">
            <search string="Search Equipment">
                <field name="name"/>
                <field name="serial_number"/>
                <field name="category_id"/>
                <field name="department_id"/>
                <field name="employee_id"/>
                <field name="maintenance_team_id"/>
                <field name="work_center_id"/>
                <field name="location"/>
                
                <filter string="My Equipment" name="my_equipment"
                        domain="[('employee_id.user_id', '=', uid)]"/>
                <filter string="Under Warranty" name="under_warranty"
                        domain="[('warranty_status', '=', 'valid')]"/>
                <filter string="Warranty Expired" name="warranty_expired"
                        domain="[('warranty_status', '=', 'expired')]"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Scrapped" name="scrapped" domain="[('is_scrap', '=', True)]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Category" name="group_category" context="{'group_by': 'category_id'}"/>
                    <filter string="Department" name="group_department" context="{'group_by': 'department_id'}"/>
                    <filter string="Employee" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Maintenance Team" name="group_team" context="{'group_by': 'maintenance_team_id'}"/>
                    <filter string="Work Center" name="group_work_center" context="{'group_by': 'work_center_id'}"/>
                    <filter string="Location" name="group_location" context="{'group_by': 'location'}"/>
                    <filter string="Warranty Status" name="group_warranty" context="{'group_by': 'warranty_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_equipment" model="ir.actions.act_window">
        <field name="name">Equipment</field>
        <field name="res_model">equipment.equipment</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="equipment_view_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register your first equipment
            </p>
            <p>
                Track all company assets - machines, vehicles, computers, and more.
            </p>
        </field>
    </record>

    <!-- Action: Equipment by Department -->
    <record id="action_equipment_by_department" model="ir.actions.act_window">
        <field name="name">Equipment by Department</field>
        <field name="res_model">equipment.equipment</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="equipment_view_search"/>
        <field name="context">{'search_default_group_department': 1}</field>
    </record>

    <!-- Action: Equipment by Employee -->
    <record id="action_equipment_by_employee" model="ir.actions.act_window">
        <field name="name">Equipment by Employee</field>
        <field name="res_model">equipment.equipment</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="equipment_view_search"/>
        <field name="context">{'search_default_group_employee': 1}</field>
    </record>

</odoo>
