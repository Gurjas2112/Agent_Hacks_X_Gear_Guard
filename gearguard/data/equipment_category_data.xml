        <record id="category_machinery" model="equipment.category">
            <field name="name">Machinery</field>
            <field name="code">MACH</field>
            <field name="color">1</field>
            <field name="note">Heavy machinery and production equipment (CNC machines, lathes, presses)</field>
        </record>

        <record id="category_vehicles" model="equipment.category">
            <field name="name">Vehicles</field>
            <field name="code">VEH</field>
            <field name="color">2</field>
            <field name="note">Company vehicles (trucks, forklifts, delivery vans)</field>
        </record>

        <record id="category_it_equipment" model="equipment.category">
            <field name="name">IT Equipment</field>
            <field name="code">IT</field>
            <field name="color">4</field>
            <field name="note">Computers, servers, networking equipment</field>
        </record>

        <record id="category_office" model="equipment.category">
            <field name="name">Office Equipment</field>
            <field name="code">OFF</field>
            <field name="color">5</field>
            <field name="note">Printers, scanners, projectors, furniture</field>
        </record>

        <record id="category_hvac" model="equipment.category">
            <field name="name">HVAC</field>
            <field name="code">HVAC</field>
            <field name="color">3</field>
            <field name="note">Heating, ventilation, and air conditioning systems</field>
        </record>

        <record id="category_electrical" model="equipment.category">
            <field name="name">Electrical Systems</field>
            <field name="code">ELEC</field>
            <field name="color">9</field>
            <field name="note">Electrical panels, generators, transformers</field>
        </record>

    </data>
